{
  "name": "site-scraper",
  "version": "1.0.0",
  "description": "CLI utility to mirror a website (HTML + CSS) into a local folder.",
  "type": "module",
  "bin": {
    "site-scraper": "dist/index.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "minimist": "^1.2.8",
    "p-limit": "^4.0.0",
    "probe-image-size": "^7.2.3"
  },
  "optionalDependencies": {
    "sharp": "^0.33.2"
  },
  "devDependencies": {
    "@types/minimist": "^1.2.5",
    "@types/node": "^20.12.7",
    "@types/probe-image-size": "^7.2.5",
    "tsx": "^4.7.2",
    "typescript": "^5.4.5"
  },
  "volta": {
    "node": "22.21.0",
    "npm": "11.6.2"
  }
}
