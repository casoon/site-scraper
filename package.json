{
  "name": "site-scraper",
  "version": "1.2.0",
  "description": "CLI utility to mirror a website (HTML + CSS) into a local folder.",
  "type": "module",
  "bin": {
    "site-scraper": "dist/index.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "lint": "biome lint src",
    "format": "biome format src --write",
    "check": "biome check src",
    "check:fix": "biome check src --write"
  },
  "engines": {
    "node": ">=24"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "minimist": "^1.2.8",
    "p-limit": "^4.0.0",
    "probe-image-size": "^7.2.3",
    "puppeteer": "^24.34.0"
  },
  "optionalDependencies": {
    "sharp": "^0.33.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/minimist": "^1.2.5",
    "@types/node": "^24.10.1",
    "@types/probe-image-size": "^7.2.5",
    "tsx": "^4.7.2",
    "typescript": "^5.4.5"
  },
  "volta": {
    "node": "24.11.1",
    "npm": "11.6.2"
  }
}
